@model DesbloqueioModel
@{
    ViewData["Title"] = "Desbloqueio Mental";
}

<div class="bg-white min-h-screen py-24">
    <div class="container mx-auto px-4 max-w-2xl text-center">
        <h1 class="text-5xl font-serif mb-4">Manual da Primeira Virada: Quebre o ciclo da autossabotagem e comece hoje.</h1>
        <p class="text-xl mb-8">Baixe gratuitamente o PDF com estratégias práticas do Diogo.</p>

        <form asp-action="Cadastrar" method="post" class="space-y-4 text-left">
            <div>
                <label asp-for="Nome" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Nome" class="w-full px-4 py-2 border rounded-md" placeholder="Seu nome completo" />
                <span asp-validation-for="Nome" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Email" type="email" class="w-full px-4 py-2 border rounded-md" placeholder="seu@email.com" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>
            <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-md hover:bg-blue-700">Quero Receber Agora</button>
        </form>
    </div>
</div>
