<script>
// Funcionalidades da p√°gina de unsubscribe
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('unsubscribeForm');
    const confirmBtn = document.getElementById('confirmBtn');
    
    if (form && confirmBtn) {
        // Confirma√ß√£o antes de enviar
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const email = form.querySelector('input[name="Email"]').value;
            
            if (!email) {
                alert('Por favor, digite seu email.');
                return;
            }
            
            // Mostrar modal de confirma√ß√£o
            const confirmed = confirm(
                `Tem certeza que deseja remover o email "${email}" da lista de notifica√ß√µes das lives?\n\n` +
                `Voc√™ n√£o receber√° mais:\n` +
                `‚Ä¢ Notifica√ß√µes de lives ao vivo\n` +
                `‚Ä¢ Lembretes antes das transmiss√µes\n` +
                `‚Ä¢ Dicas exclusivas de programa√ß√£o\n` +
                `‚Ä¢ Conte√∫do sobre carreira tech\n\n` +
                `Esta a√ß√£o n√£o pode ser desfeita.`
            );
            
            if (confirmed) {
                // Mostrar loading
                const btnText = confirmBtn.querySelector('.btn-text');
                const btnLoader = confirmBtn.querySelector('.btn-loader');
                
                btnText.style.display = 'none';
                btnLoader.style.display = 'block';
                confirmBtn.disabled = true;
                
                // Enviar formul√°rio
                form.submit();
            }
        });
    }
    
    // Anima√ß√£o de entrada dos elementos
    const cards = document.querySelectorAll('.consideration-card, .unsubscribe-form-card');
    cards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(20px)';
        
        setTimeout(() => {
            card.style.transition = 'all 0.6s ease';
            card.style.opacity = '1';
            card.style.transform = 'translateY(0)';
        }, 200 * index);
    });
    
    // Anima√ß√£o dos benef√≠cios
    const benefits = document.querySelectorAll('.benefit-item');
    benefits.forEach((benefit, index) => {
        benefit.style.opacity = '0';
        benefit.style.transform = 'translateX(-20px)';
        
        setTimeout(() => {
            benefit.style.transition = 'all 0.4s ease';
            benefit.style.opacity = '1';
            benefit.style.transform = 'translateX(0)';
        }, 500 + (100 * index));
    });
    
    // Anima√ß√£o das estat√≠sticas
    const stats = document.querySelectorAll('.stat-item');
    stats.forEach((stat, index) => {
        stat.style.opacity = '0';
        stat.style.transform = 'scale(0.8)';
        
        setTimeout(() => {
            stat.style.transition = 'all 0.5s ease';
            stat.style.opacity = '1';
            stat.style.transform = 'scale(1)';
        }, 1000 + (200 * index));
    });
});

