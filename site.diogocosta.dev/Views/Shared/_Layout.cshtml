    <!-- Carregamento otimizado de CSS e fontes -->
    <script>
        // Função para carregar CSS de forma assíncrona
        function loadCSS(href, before, media, callback) {
            var doc = window.document;
            var ss = doc.createElement("link");
            var ref;
            
            if (before) {
                ref = before;
            } else {
                var refs = (doc.body || doc.getElementsByTagName("head")[0]).childNodes;
                ref = refs[refs.length - 1];
            }
            
            var sheets = doc.styleSheets;
            
            if (callback) {
                ss.onload = callback;
            }
            
            ss.rel = "stylesheet";
            ss.href = href;
            ss.media = "only x";
            
            function ready(cb) {
                if (doc.body) {
                    return cb();
                }
                setTimeout(function() {
                    ready(cb);
                });
            }
            
            ready(function() {
                ref.parentNode.insertBefore(ss, (before ? ref : ref.nextSibling));
            });
            
            var onloadcssdefined = function(ss, cb) {
                var resolvedHref = ss.href;
                var i = sheets.length;
                while (i--) {
                    if (sheets[i].href === resolvedHref) {
                        return cb();
                    }
                }
                setTimeout(function() {
                    onloadcssdefined(ss, cb);
                });
            };
            
            function loadCB() {
                if (ss.addEventListener) {
                    ss.removeEventListener("load", loadCB);
                }
                ss.media = media || "all";
            }
            
            if (ss.addEventListener) {
                ss.addEventListener("load", loadCB);
            }
            
            ss.onloadcssdefined = onloadcssdefined;
            onloadcssdefined(ss, loadCB);
            
            return ss;
        }
        
        // Carregar fonte otimizada
        loadCSS('https://fonts.googleapis.com/css2?family=Newsreader:wght@400;500;600&display=swap');
        
        // Aplicar fonte após carregamento
        document.addEventListener('DOMContentLoaded', function() {
            // Detectar quando a fonte carregou
            if ('fonts' in document) {
                document.fonts.ready.then(function() {
                    document.documentElement.classList.add('fonts-loaded');
                });
            } else {
                // Fallback para navegadores sem suporte
                setTimeout(function() {
                    document.documentElement.classList.add('fonts-loaded');
                }, 1000);
            }
        });
        
        // Carregamento condicional do Tailwind
        function loadTailwind() {
            if (!window.tailwind && !document.querySelector('script[src*="tailwindcss"]')) {
                const script = document.createElement('script');
                script.src = 'https://cdn.tailwindcss.com';
                script.async = true;
                script.onload = function() {
                    if (window.tailwind && window.tailwind.config) {
                        window.tailwind.config = {
                            theme: {
                                extend: {
                                    colors: {
                                        'navy': {
                                            900: '#0a1930'
                                        }
                                    }
                                }
                            }
                        };
                    }
                };
                document.head.appendChild(script);
            }
        }
        
        // Carregar Tailwind após interação ou delay
        let tailwindLoaded = false;
        function loadTailwindOnce() {
            if (!tailwindLoaded) {
                tailwindLoaded = true;
                loadTailwind();
            }
        }
        
        ['mousedown', 'touchstart', 'keydown'].forEach(function(event) {
            document.addEventListener(event, loadTailwindOnce, {once: true, passive: true});
        });
        
        setTimeout(loadTailwindOnce, 2000);
    </script>

