    // Fun√ß√£o ultra-leve para feedback de formul√°rios
    function hideFeedbacks() {
        setTimeout(function() {
            var feedbacks = document.querySelectorAll('.bg-green-100, .bg-red-100');
            for (var i = 0; i < feedbacks.length; i++) {
                feedbacks[i].style.display = 'none';
            }
        }, 5000);
    }
    
    // Scroll otimizado com throttling agressivo
    var scrollTimer;
    window.addEventListener('scroll', function() {
        if (!scrollTimer) {
            scrollTimer = setTimeout(function() {
                var nav = document.querySelector('nav');
                if (nav) {
                    if (window.scrollY > 40) {
                        nav.classList.add('shadow-md');
                    } else {
                        nav.classList.remove('shadow-md');
                    }
                }
                scrollTimer = null;
            }, 16); // 60fps
        }
    }, { passive: true });
    
    // Execute ap√≥s DOM
    document.addEventListener('DOMContentLoaded', hideFeedbacks);
</script>

