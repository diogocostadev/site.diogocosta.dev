<script>
    const joinButton = document.getElementById('joinButton');
    const subscribeForm = document.getElementById('subscribeForm');
    let isFormOpen = false;

    // Verifica se há mensagens de feedback e mantém o formulário aberto
    window.addEventListener('load', () => {
        if (document.querySelector('.bg-green-100') || document.querySelector('.bg-red-100')) {
            subscribeForm.classList.add('active');
            isFormOpen = true;
        }
    });

    // Toggle do formulário
    joinButton.addEventListener('click', (e) => {
        e.stopPropagation();
        isFormOpen = !isFormOpen;
        subscribeForm.classList.toggle('active');
    });

    // Fecha o formulário ao clicar fora, exceto se houver mensagens de feedback
    document.addEventListener('click', (e) => {
        const hasFeedback = document.querySelector('.bg-green-100') || document.querySelector('.bg-red-100');
        if (isFormOpen && !subscribeForm.contains(e.target) && !hasFeedback) {
            subscribeForm.classList.remove('active');
            isFormOpen = false;
        }
    });

    // Previne o fechamento ao clicar dentro do formulário
    subscribeForm.addEventListener('click', (e) => {
        e.stopPropagation();
    });

    // Remove mensagens de feedback após alguns segundos
    setTimeout(() => {
        const feedbackMessages = document.querySelectorAll('.bg-green-100, .bg-red-100');
        feedbackMessages.forEach(msg => {
            msg.style.transition = 'opacity 0.5s ease-out';
            msg.style.opacity = '0';
            setTimeout(() => {
                msg.remove();
                if (!document.querySelector('.bg-green-100') && !document.querySelector('.bg-red-100')) {
                    subscribeForm.classList.remove('active');
                    isFormOpen = false;
                }
            }, 500);
        });
    }, 5000);
</script>

